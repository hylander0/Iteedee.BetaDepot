@using Iteedee.BetaDepot.Models
@using Iteedee.BetaDepot.Common

@{
    ViewBag.Title = "Build History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Build History</h2>

<div class="jumbotron">

    <div class="row">
        <img class="pull-left" src="@Model.AppIconUrl" alt="@Model.AppName" />
        <p>
            <small style="padding-left:20px;">@Model.AppName</small>
        </p>
    </div>
</div>
<div class="row">
    <div class="form-group">
        <label for="cbxEnvironment">Environments:</label>
        <select name="EnvironmentId" id="cbxEnvironment" class="form-control" required>
            <option data-url="@Url.Action("BuildHistory", "Platform", new { id = "ANDROID", appId = Model.AppId })" @if (String.IsNullOrEmpty(Model.selectedEnvironment)) { <text> selected </text>  }>-ALL-</option>
            <option data-url="@Url.Action("BuildHistory", "Platform", new { id = "ANDROID", environment = Constants.BUILD_ENVIRONMENT_DEVELOPMENT, appId = Model.AppId })" @if (Model.selectedEnvironment == Constants.BUILD_ENVIRONMENT_DEVELOPMENT) { <text> selected </text>      }>Development</option>
            <option data-url="@Url.Action("BuildHistory", "Platform", new { id = "ANDROID", environment = Constants.BUILD_ENVIRONMENT_TEST, appId = Model.AppId })" @if (Model.selectedEnvironment == Constants.BUILD_ENVIRONMENT_TEST) { <text> selected </text>      }>Test</option>
            <option data-url="@Url.Action("BuildHistory", "Platform", new { id = "ANDROID", environment = Constants.BUILD_ENVIRONMENT_PRODUCTION, appId = Model.AppId })" @if (Model.selectedEnvironment == Constants.BUILD_ENVIRONMENT_PRODUCTION) { <text> selected </text>     }>Production</option>
        </select>
    </div>

</div>
<div class="row">
@if (Model.Builds.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Version</th>
                <th>Uploaded By</th>
                <th>Updated Date</th>
                <th>Notes</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (Iteedee.BetaDepot.Models.PlatformViewAppBuildHistory.BuildHistory b in Model.Builds)
        {
            <tr>
                <td><img style="width: 32px; height: 32px;" src="@Model.AppIconUrl" alt="@Model.AppName" /></td>
                <td>@b.VersionNumber (@b.Environment)</td>
                <td>@b.UploadedByName</td>
                <td>@b.UploadedDtm</td>
                <td><span class="buildNotes glyphicon glyphicon-edit" data-original-title="@b.BuildNotes"></span></td>
                <td><a href="@Url.RouteUrl("Platform", routeValues: new { controller = "Platform", action = "AppDetail", Platform = b.Platform, Id = b.BuildId })" class="btn btn-primary btn-sm">Details</a></td>
                @*<td><a href="@Url.Action("AppDetail", "Platform", new { Platform = b.Platform, Id = b.BuildId })" class="btn btn-primary btn-sm">Details</a></td>*@
                @if (Model.CurrentUsersMembershipRole.ToUpper() == Constants.APPLICATION_MEMBER_ROLE_ADMINISTRATOR)
                {
                    <td><a data-id="@b.BuildId" class="btn btn-danger btn-sm btnDelete">Remove</a></td>
                }
                else
                {
                    <td></td>
                }
                
            </tr>
        }   
        </tbody>
    </table>
}
else
{
    <strong>No builds found.</strong>
}


</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var init = function () {
                $(".buildNotes").tooltip();

                $("#cbxEnvironment").change(function () {
                    document.location.href = $(this).find('option:selected').data('url');
                });

                $(".btnDelete").click(function () {
                    var performDelete = confirm("Are you sure you want to delete this build?");
                    if(performDelete)
                    {
                        //$(this).attr("data-id");

                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("DeleteBuild", "Platform")',
                            data: app.helpers.addAntiForgeryToken({ id: $(this).attr("data-id") }),
                            success: function (data) {
                                //location.reload();
                            },
                            error: function (errorData)
                            {
                                //alert("An Error ocurred while attempting to delete the record.")
                            }
                        });

                    }
                });
            }
            init();
        });
    </script>
}
